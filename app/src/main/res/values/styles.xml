<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="CustomTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorTeal500</item>
        <item name="colorPrimaryDark">@color/colorTeal700</item>
        <item name="colorAccent">@color/colorTeal100</item>
        <item name="android:statusBarColor">@color/colorTeal800</item>
        <item name="android:colorAccent">@color/colorTeal500</item>
    </style>

    <style name="CustonDateDialogTheme" parent="android:Theme.Material.Light.Dialog">
        <item name="colorAccent">@color/colorTeal700</item>
        <item name="android:colorAccent">@color/colorTeal700</item>
        <item name="android:colorPrimary">@color/colorTeal500</item>
        <item name="android:colorPrimaryDark">@color/colorTeal700</item>
    </style>

    <style name="CustomTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="CustomTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

</resources>
