<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/colorTeal500"
    android:gravity="center"
    style="@style/CustomTheme"
    tools:context="com.romanvytv.webapiandroidtest.activities.RegisterActivity">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@color/colorTeal800"
        android:layout_marginLeft="40dp"
        android:layout_marginRight="40dp"
        android:layout_gravity="center"
        android:orientation="vertical"
        android:id="@+id/linearLayout">

        <EditText
            android:id="@+id/editEmail"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/prompt_email"
            android:padding="16dp"
            android:layout_marginTop="16dp"
            android:layout_marginLeft="36dp"
            android:layout_marginRight="36dp"
            android:ems="10"
            android:inputType="textEmailAddress"
            android:backgroundTint="@color/colorTeal50"
            android:textColor="@color/colorTeal50"
            android:textColorHint="@color/colorTeal50"/>

        <EditText
            android:id="@+id/editPassword"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/password"
            android:padding="16dp"
            android:layout_marginLeft="36dp"
            android:layout_marginRight="36dp"
            android:ems="10"
            android:inputType="textPassword"
            android:backgroundTint="@color/colorTeal50"
            android:textColor="@color/colorTeal50"
            android:textColorHint="@color/colorTeal50"/>

        <EditText
            android:id="@+id/editConfirmPassword"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/confirm_password"
            android:padding="16dp"
            android:layout_marginLeft="36dp"
            android:layout_marginRight="36dp"
            android:ems="10"
            android:inputType="textPassword"
            android:backgroundTint="@color/colorTeal50"
            android:textColor="@color/colorTeal50"
            android:textColorHint="@color/colorTeal50"/>

        <EditText
            android:id="@+id/editName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/name"
            android:padding="16dp"
            android:layout_marginLeft="36dp"
            android:layout_marginRight="36dp"
            android:ems="10"
            android:inputType="text"
            android:backgroundTint="@color/colorTeal50"
            android:textColor="@color/colorTeal50"
            android:textColorHint="@color/colorTeal50"/>

        <EditText
            android:id="@+id/editSurname"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/surname"
            android:padding="16dp"
            android:layout_marginLeft="36dp"
            android:layout_marginRight="36dp"
            android:ems="10"
            android:inputType="text"
            android:backgroundTint="@color/colorTeal50"
            android:textColor="@color/colorTeal50"
            android:textColorHint="@color/colorTeal50"/>

        <EditText
            android:id="@+id/editPhoneNumber"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/phone_number"
            android:padding="16dp"
            android:layout_marginLeft="36dp"
            android:layout_marginRight="36dp"
            android:ems="10"
            android:inputType="phone"
            android:backgroundTint="@color/colorTeal50"
            android:textColor="@color/colorTeal50"
            android:textColorHint="@color/colorTeal50"/>

        <EditText
            android:id="@+id/editBirthDate"
            android:drawableRight="@drawable/ic_date_range_teal_50_24dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/birth_date"
            android:padding="16dp"
            android:layout_marginLeft="36dp"
            android:layout_marginRight="36dp"
            android:ems="10"
            android:clickable="true"
            android:focusable="false"
            android:editable="false"
            android:backgroundTint="@color/colorTeal50"
            android:textColor="@color/colorTeal50"
            android:textColorHint="@color/colorTeal50"/>

        <Button
            android:id="@+id/btnSignUpReg"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="36dp"
            android:layout_marginRight="36dp"
            android:padding="16dp"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="40dp"
            android:text="@string/sign_up"
            android:background="@color/colorTeal900"
            android:textColor="@color/colorTeal50"/>

    </LinearLayout>

    <TextView
        android:id="@+id/tvBackBtn"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:drawableLeft="@mipmap/ic_arrow_back" />


</FrameLayout>
